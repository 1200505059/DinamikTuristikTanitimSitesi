@model List<WebApplication1.Models.Entity.TBLDOGA>
@{
    ViewBag.Title = "Doga";
    Layout = "~/Views/Shared/_ADMİNLAYOUT.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Estetik Tablo</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>

    <table class="table table-bordered">
        <thead>
            <tr style="text-align:center;">
                <th>ID</th>
                <th>BAŞLIK</th>
                <th>METİN</th>
                <th>RESİM YOLU</th>
                <th>SİL</th>
                <th>GÜNCELLE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DogaID</td>
                    <td>@item.DogaBaslik1</td>
                    <td>@item.DogaText</td>
                    <td>@item.DogaImageURL</td>
                    <td><a href="/Admin/DogaSil/@item.DogaID" class="btn btn-outline-warning">SİL</a></td>
                    <td><a href="/Admin/DogaGuncelle/@item.DogaID" class="btn btn-outline-success">GÜNCELLE</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Admin/DogaEkle" class="btn btn-outline-primary" style="margin-left:30px; margin-top:30px;">~EKLE~</a>


</body>
</html>



