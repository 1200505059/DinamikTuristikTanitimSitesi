@model List<WebApplication1.Models.Entity.TBLKULTUR>
@{
    ViewBag.Title = "Tarih";
    Layout = "~/Views/Shared/_ADMİNLAYOUT.cshtml";
}




    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Estetik Tablo</title>
        <style>
            table {
                width: 100%;
                border-collapse: collapse;
                margin-bottom: 20px;
            }

            th, td {
                padding: 8px;
                text-align: left;
                border-bottom: 1px solid #ddd;
            }

            th {
                background-color: #f2f2f2;
            }

            tr:hover {
                background-color: #f5f5f5;
            }
        </style>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    </head>
    <body>

        <table class="table table-bordered">
            <thead>
                <tr style="text-align:center;">
                    <th>ID</th>
                    <th>BAŞLIK</th>
                    <th>RESİM YOLU</th>
                    <th>METİN</th>
                    <th>SİL</th>
                    <th>GÜNCELLE</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.KulturID</td>
                        <td>@item.KulturBaslik</td>
                        <td>@item.KulturImageURL</td>
                        <td>@item.KulturMetin</td>
                        <td><a href="/Admin/TarihSil/@item.KulturID" class="btn btn-outline-warning">SİL</a></td>
                        <td><a href="/Admin/TarihGuncelle/@item.KulturID" class="btn btn-outline-success">GÜNCELLE</a></td>
                    </tr>
                }

            </tbody>
        </table>
        <a href="/Admin/TarihEkle" class="btn btn-outline-primary" style="margin-left:30px; margin-top:30px;">~EKLE~</a>

    </body>
</html>


