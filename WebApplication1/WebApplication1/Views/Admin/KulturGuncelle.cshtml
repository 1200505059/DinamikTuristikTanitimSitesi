@model WebApplication1.Models.Entity.TBLTARİH
@{
    ViewBag.Title = "KulturGuncelle";
    Layout = "~/Views/Shared/_ADMİNLAYOUT.cshtml";
}

<form class="card-form" method="post" style="max-width: 1200px; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; ">
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardID" style="font-weight: bold;">ID</label>
        <input type="text" class="form-control" id="HakkimdaID" name="TarihID" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" value="@Model.TarihID">
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardBaslik" style="font-weight: bold;">BAŞLIK</label>
        <input type="text" class="form-control" id="CardBaslik" name="TarihBaslık" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" value="@Model.TarihBaslık">
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardBaslik" style="font-weight: bold;">METİN</label>
        <input type="text" class="form-control" id="CardBaslik" name="TarihText" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" value="@Model.TarihText">
    </div>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="CardBaslik" style="font-weight: bold;">RESİM YOLU</label>
        <input type="text" class="form-control" id="CardBaslik" name="TarihImageURL" style="width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" value="@Model.TarihImageURL">
    </div>
    <div class="form-group" style="margin-top: 15px;">
        <button type="submit" class="btn btn-warning" style="padding: 10px 20px; border: none; border-radius: 5px; background-color: #ffc107; color: #fff; cursor: pointer;"> GÜNCELLE</button>
    </div>
</form>


